# Ignore node_modules from the npm package
node_modules/

# Ignore source files (src folder)
src/
scripts/  # Exclude scripts folder, including themeScript.js

# Ignore IDE/editor-specific settings
.vscode/
.idea/

# Ignore test files and test-related output
test/
__tests__/

# Ignore build configuration files
rollup.config.js
postinstall.js  # Exclude postinstall.js from being published

# Ignore other config files
webpack.config.js
tsconfig.json
babel.config.json
.eslintrc.js

# Ignore Git-specific files
.git/
.gitignore

# Ignore package manager lock files (depending on package manager)
package-lock.json
yarn.lock

# Ignore environment files
.env
.env.local

# Ignore log files
*.log
npm-debug.log*
yarn-debug.log*

# Ignore coverage files (if running tests)
coverage/

# Ignore tarballs
*.tgz

# Public folder (exclude everything except the necessary theme script)
public/
!public/react-next-theme-script.js  # Include only the minified theme script
